{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "core": {
      "projectType": "library",
      "root": "projects/core",
      "sourceRoot": "projects/core/src",
      "prefix": "shig",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "projects/core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/core/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/core/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/core/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        }
      }
    },
    "lobby": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/lobby",
      "sourceRoot": "projects/lobby/src",
      "prefix": "shig",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "outputPath": {
              "base": "dist/lobby"
            },
            "index": "projects/lobby/src/index.html",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "projects/lobby/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "allowedCommonJsDependencies": [
              "sdp-transform"
            ],
            "assets": [
              "projects/lobby/src/favicon.ico",
              "projects/lobby/src/assets"
            ],
            "styles": [
              "projects/lobby/src/styles.scss"
            ],
            "scripts": [],
            "browser": "projects/lobby/src/main.ts"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "projects/lobby/src/environments/environment.ts",
                  "with": "projects/lobby/src/environments/environment.prod.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false
              //              "vendorChunk": true,
              //              "extractLicenses": false,
              //              "sourceMap": true,
              //              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "lobby:build:production"
            },
            "development": {
              "buildTarget": "lobby:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular/build:extract-i18n",
          "options": {
            "buildTarget": "lobby:build"
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ],
            "tsConfig": "projects/lobby/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/lobby/src/favicon.ico",
              "projects/lobby/src/assets"
            ],
            "styles": [
              "projects/lobby/src/styles.scss"
            ],
            "scripts": []
          }
        }
      }
    }
  }
}
