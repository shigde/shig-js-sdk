{
  "name": "shig-js-sdk",
  "version": "0.0.6",
  "description": "Shig Lobby",
  "repository": {
    "type": "git",
    "url": "https://github.com/shigde/shig-js-sdk.git"
  },
  "keywords": [
    "angular",
    "shig",
    "interactive streaming",
    "components"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
