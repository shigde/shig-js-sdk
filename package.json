    "@angular/platform-browser-dynamic": "^20.0.3",
    "@angular/router": "^20.0.3",
    "@material/web": "^2.3.0 ",
    "dexie": "^3.2.4",
    "rxjs": "~7.8.0",
    "sdp-transform": "^2.14.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.2",
    "@angular/cli": "~20.0.2",
